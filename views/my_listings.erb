<div class="hero-text-mylistings">
  <h2 class="text"> My Listings </h2>
</div>

<% @my_listings.each do |listing| %>
  <div class = "entry">
    <a href="../listings/<%= listing.id %>"><%= listing.title %></a>
    <%= listing.location %>
    <a>Â£<%= listing.price_per_night %>/night </a>
    <form action="../listings/<%= listing.id %>/edit" method="get" class="inline-form">
      <input type="submit" value="Edit" class="edit-button">
    </form>
